{
  "ConnectionStrings": {
    "AuditoriaContext": "Host=127.0.0.1;Database=ops;Username=ops;Password=ops_pass;Port=5433;Include Error Detail=true;"
  },
  "AppSettings": {
    "SiteRootFolder": "/var/www/ops.net.br",
    "SendGridAPIKey": "",
    "TelegramApiToken": "",
    "ReceitaWsApiToken": "",
    "ComputerVisionOcrUrl": "",
    "ComputerVisionOcrKey": "",
    "ImportacaoDespesas:Incremental": "false",
    "ForceImport": "true"
  },
  "EPPlus": {
    "ExcelPackage": {
      "LicenseContext": "NonCommercial"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Exceptions",
      "Serilog",
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "System": "Warning",
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/tmp/ops/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:j} {NewLine}{Exception}"
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "Properties": {
      "Environment": "Development"
    }
  }
}